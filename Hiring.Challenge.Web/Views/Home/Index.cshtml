<style>

    .about
    {
        display:flex;
        align-items: center;
        justify-content: center;
        height: 90vh;
    }

    .about-info .form-group select
    {
        margin: 50px 0 10px 0;
    }
    .about-info .form-group button
    {
        width: 100%;
        height: 50px;
    }
</style>

<section class="about">
    <div class="about-info">
        <h1>Conheça os repositórios em destaque do GITHUB!</h1>
        <div class="form-group">
            <select id="selector-language" class="form-control" asp-items="ViewBag.Languages"></select>
            <button class="btn btn-info" onclick="search()">Conhecer</button>
        </div>
    </div>
</section>
    
@section Scripts 
{
    <script>
        function search() {
            var language = $("#selector-language").val()

            window.location.href = "/" + language, true;
        }
    </script>
}